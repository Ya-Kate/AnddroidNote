<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp712"
    android:layout_marginEnd="@dimen/dp_16"
    android:background="@color/bg_list_navigation">

    <TextView
        android:id="@+id/nameProfile"
        style="@style/name_list_navigation"
        android:layout_width="@dimen/dp_172"
        android:layout_height="@dimen/dp0"
        android:layout_marginTop="@dimen/dp_52"
        android:text="@string/profile"
        android:textColor="@color/spiice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/dustin_warren"
        android:layout_width="@dimen/dp168"
        android:layout_height="@dimen/dp33"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_22"
        android:fontFamily="@font/red_hat_display_medium"
        android:text="@string/dustin_warren"
        android:textColor="@color/spiice"
        android:textFontWeight="700"
        android:textSize="@dimen/sp25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameProfile" />

    <Button
        android:id="@+id/delete_notes"
        style="@style/bg_buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp0"
        android:fontFamily="@font/public_sans_regular"
        android:hint="@string/delete_profile"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dustin_warren"
        app:layout_constraintTop_toTopOf="@id/dustin_warren" />

    <TextView
        android:id="@+id/coll_note"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_29"
        android:fontFamily="@font/red_hat_display_medium"
        android:paddingStart="@dimen/dp_29"
        android:text="@string/notes"
        android:textColor="@color/spiice"
        android:textSize="@dimen/sp20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dustin_warren" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout"
        style="@style/bg_list_of_note"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_29"
        android:background="@null"
        android:fontFamily="@font/red_hat_display_medium"
        android:hint="@string/logout"
        android:textColor="@color/black"
        android:textColorHint="@color/spiice"
        android:textSize="@dimen/sp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coll_note" />

</androidx.constraintlayout.widget.ConstraintLayout>